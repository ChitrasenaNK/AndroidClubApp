<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="45dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_item"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtNameA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"

            android:textStyle="bold"

            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/txtEmailA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/txtNameA"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtBranchA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/txtEmailA"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPhA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/txtBranchA"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>