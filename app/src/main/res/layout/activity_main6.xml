<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg">
        <ImageButton
            android:id="@+id/back6"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="#020C4D"

            />



        <ImageView
            android:id="@+id/center"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:src="@drawable/logo"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back6"
            android:layout_marginStart="25dp"

            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Club"
            android:layout_toEndOf="@+id/center"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="serif-monospace"
            android:textFontWeight="15"
            />

    </RelativeLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter email to send password reset link:"
        android:layout_marginTop="20dp"

        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"


        />
    <EditText
        android:id="@+id/emailForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"



        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/btnForgot"
        android:text="Send rest link"/>

</LinearLayout>