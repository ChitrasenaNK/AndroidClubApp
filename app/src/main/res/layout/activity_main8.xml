<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8"
    android:background="@drawable/bgpink">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg"
        android:id="@+id/rel8">
        <ImageButton
            android:id="@+id/back8"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="#020C4D"

            />



        <ImageView
            android:id="@+id/center"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:src="@drawable/logo"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back8"
            android:layout_marginStart="25dp"

            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Club"
            android:layout_toEndOf="@+id/center"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="serif-monospace"
            android:textFontWeight="15"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rel8"
        android:dividerHeight="10dp"
        android:padding="10dp"



        />

</RelativeLayout>